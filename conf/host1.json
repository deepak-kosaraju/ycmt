{
    "packages": {
        "update_cache": "No",
        "install": {
            "apache2": "rc",
            "php5": "rc",
            "libapache2-mod-php5": "rc"
        },
        "remove": []
    },
    "slack": {
        "channels": []
    },
    "services": {
        "apache2": "started"
    },
    "configs": {
        "files": [
            "index.php",
            "group.php"
        ],
        "index.php": {
            "source": "files/index.php",
            "dest": "/var/www/html/index.php",
            "user": "root",
            "group": "root",
            "mode": "00744",
            "notify": "apache2:reload",
            "action": "create"
        },
        "group.php": {
            "source": "files/group.php",
            "dest": "/var/www/html/group.php",
            "mode": "00744",
            "notify": "apache2:reload",
            "action": "create"
        }
    }
}